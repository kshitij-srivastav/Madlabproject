<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    tools:context=".MemorizeActivity">


    <GridLayout
        android:id="@+id/mem_grid"
        android:layout_width="305dp"
        android:layout_height="350dp"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="170dp"
        android:clickable="false"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/gridButton0"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="@color/white"
            android:onClick="onButtonClick"
            android:text="7"
            android:textColor="@color/red"
            android:textSize="32dp" />

        <Button
            android:id="@+id/gridButton1"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:onClick="onButtonClick"
            android:text="8"
            android:textColor="@color/teal_200"
            android:textSize="32dp" />

        <Button
            android:id="@+id/gridButton2"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:onClick="onButtonClick"
            android:text="9"
            android:textColor="@color/purple_500"
            android:textSize="32dp" />

        <Button
            android:id="@+id/gridButton3"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:onClick="onButtonClick"
            android:text="4"
            android:textColor="@color/purple_700"
            android:textSize="32dp" />

        <Button
            android:id="@+id/gridButton4"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:onClick="onButtonClick"
            android:text="5"
            android:textColor="@color/orange"
            android:textSize="32dp" />

        <Button
            android:id="@+id/gridButton5"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:onClick="onButtonClick"
            android:text="6"
            android:textColor="@color/theme_green"
            android:textSize="32dp" />

        <Button
            android:id="@+id/gridButton6"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:onClick="onButtonClick"
            android:text="1"
            android:textColor="@color/theme_green"
            android:textSize="32dp" />

        <Button
            android:id="@+id/gridButton7"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:onClick="onButtonClick"
            android:text="2"
            android:textColor="@color/pink"
            android:textSize="32dp" />

        <Button
            android:id="@+id/gridButton8"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:onClick="onButtonClick"
            android:text="3"
            android:textColor="@color/teal_200"
            android:textSize="32dp" />

        <Button
            android:id="@+id/gridButton9"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:backgroundTint="@color/white"
            android:onClick="onButtonClick"
            android:text="0"
            android:textColor="@color/grey"
            android:textSize="32dp" />

    </GridLayout>

    <TextView
        android:id="@+id/textResponse"
        android:layout_width="324dp"
        android:layout_height="45dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="88dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="105dp"
        android:text="@string/livesHeader"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/Live0"
        android:layout_width="58dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/livetrig" />

    <ImageView
        android:id="@+id/Live1"
        android:layout_width="58dp"
        android:layout_height="77dp"
        android:layout_marginStart="81dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/livetrig" />

    <ImageView
        android:id="@+id/Live2"
        android:layout_width="58dp"
        android:layout_height="77dp"
        android:layout_marginStart="146dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/livetrig" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:text="@string/scoreTitle"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginTop="17dp"
        android:text="@string/score"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>